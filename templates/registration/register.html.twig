<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}S'inscrire{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('css/inscription.css') }}">
    
</head>
<body>
    {% block body %}
        {% include 'includes/header.html.twig' %}
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-container">
                        <h1 class="text-center">S'inscrire</h1>

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                        
                            <div class="form-group">
                                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.deliveryAddress, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Créer un compte</button>
                        {{ form_end(registrationForm) }}

                        <div class="mt-3">
                            <p>Déjà inscrit?</p>
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Se Connecter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include 'includes/footer.html.twig' %}
    {% endblock %}

</body>
</html>
